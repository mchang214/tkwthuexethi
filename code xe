cau4:

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Care Service</title>

    <style>
        * {
          box-sizing: border-box;
        }
        body {
          font-family: 'Segoe UI', sans-serif;
          padding: 20px;
        }
        h2 {
          text-align: center;
        }
        
        form {
        max-width: 600px;
        margin: 40px auto;
        background-color: white;
        padding: 20px;
        border: 1px solid #ccc;
      }

      form label {
        display: block;
        margin-top: 15px;
        font-weight: bold;
      }

      form input,
      form select,
      form textarea {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
      }

      form button {
        margin-top: 20px;
        background-color: #2a9d8f;
        color: white;
        border: none;
        padding: 12px;
        width: 100%;
        font-size: 16px;
      }

      .error {
        color: red;
        font-size: 14px;
        margin-top: 5px;
      }
    
        /* Responsive */
        @media (max-width: 414px) {
          body { background-color: #f9f9f9; }
          form { font-size: 14px; }
        }
        @media (min-width: 1024px) {
          form { font-size: 16px; }
        }
        @media (min-width: 1440px) {
          form { font-size: 18px; }
        }
      </style>
</head>
<body>
    <h2>Đăng ký dịch vụ chăm sóc thú cưng</h2>
    <form id="petForm" onsubmit="return validateForm()">
      <label>Họ và tên:
        <input type="text" id="name">
      </label>

      <label>Địa chỉ email:
        <input type="email" id="email">
      </label>

      <label>Số điện thoại:
        <input type="text" id="phone">
      </label>

      <label>Loại thú cưng:
        <select id="petType">
          <option value="" disabled selected>--Chọn loại--</option>
          <option value="Chó">Chó</option>
          <option value="Mèo">Mèo</option>
          <option value="Khác">Khác</option>
        </select>
      </label>

      <label>Nội dung chi tiết nhu cầu:
        <textarea id="details" rows="5"></textarea>
      </label>

      <p class="error" id="errorMsg"></p>
      <button type="submit">Gửi đăng ký</button>
    </form>
  

  <script>
    function validateForm() {
      const name = document.getElementById("name").value.trim();
      const email = document.getElementById("email").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const petType = document.getElementById("petType").value;
      const details = document.getElementById("details").value.trim();
      const errorMsg = document.getElementById("errorMsg");

      if (!name || !email || !phone || !petType || !details) {
        errorMsg.textContent = "Vui lòng điền đầy đủ thông tin.";
        return false;
      }

      const emailRegex = /\S+@\S+\.\S+/;
      if (!emailRegex.test(email)) {
        errorMsg.textContent = "Email không hợp lệ.";
        return false;
      }

      if (phone.length < 8 || isNaN(phone)) {
        errorMsg.textContent = "Số điện thoại không hợp lệ.";
        return false;
      }

      errorMsg.textContent = ""; // Xóa lỗi nếu hợp lệ
      alert("Đăng ký thành công!");
      return true;
    }
  </script>
</body>
</html>


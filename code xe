        "ten": "Trông giữ thú cưng",
        "anh": "./image/trong-giu.jpg",
        "mo_ta": "Giữ thú cưng an toàn khi bạn bận.",
        "gia": "250.000"
      }
        
    ]`;

    const services = JSON.parse(jsonString);
    const serviceInfo = document.getElementById("service-info");

    let i = 0;
    while (i < services.length) {
      const s = services[i];
      const servicesDiv = document.createElement("div");
      servicesDiv.className = "item";
      servicesDiv.innerHTML =
        "<h3>" + s.ten + "</h3>" +
        '<img src="' + s.anh + '" alt="' + s.ten + '" width="200">' +
        "<p><strong>Mô tả: </strong>" + s.mo_ta + "</p>" +
        "<p><strong>Giá: </strong>" + s.gia + " VND</p>";
      serviceInfo.appendChild(servicesDiv);
      i++;
    }

    function validateForm() {
      const name = document.getElementById("name").value.trim();
      const email = document.getElementById("email").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const petType = document.getElementById("petType").value;
      const details = document.getElementById("details").value.trim();
      const errorMsg = document.getElementById("errorMsg");

      if (!name || !email || !phone || !petType || !details) {
        errorMsg.textContent = "Vui lòng điền đầy đủ thông tin.";
        return false;
      }

      const emailRegex = /\S+@\S+\.\S+/;
      if (!emailRegex.test(email)) {
        errorMsg.textContent = "Email không hợp lệ.";
        return false;
      }

      if (phone.length < 8 || isNaN(phone)) {
        errorMsg.textContent = "Số điện thoại không hợp lệ.";
        return false;
      }

      errorMsg.textContent = ""; 
      alert("Đăng ký thành công!");
      return true;
    }
  </script>

